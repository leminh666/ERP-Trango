# =============================================================================
# API Environment Configuration
# =============================================================================
#
# Copy this file to .env and update the values below
#
# =============================================================================

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tran_go_hoang_gia_erp?schema=public"

# JWT
JWT_SECRET="super-secret-jwt-key-2026-change-in-prod"
JWT_EXPIRES_IN="7d"

# Server
PORT=4000
NODE_ENV=development

# =============================================================================
# CORS Configuration for LAN/Mobile Access
# =============================================================================
#
# Auto-detected LAN IPs are automatically added to CORS origins.
# You can also specify additional origins here (comma-separated):
#
# WEB_CORS_ORIGINS=http://192.168.1.3:3000,http://10.0.0.0:3000
#
# After changing this, restart the backend server.
#
# =============================================================================

# Google OAuth (optional - leave empty to disable)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GOOGLE_CALLBACK_URL="http://localhost:4000/auth/google/callback"

# SMTP (optional - for password reset)
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASS=""
# SMTP_FROM="noreply@tran-go-hoang-gia.com"
